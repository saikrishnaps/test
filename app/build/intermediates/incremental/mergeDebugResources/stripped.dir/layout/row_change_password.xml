<?xml version="1.0" encoding="utf-8"?>

<FrameLayout android:id="@+id/contentContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".view.reset_password.view.UpdatePasswordFragment"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">


            <LinearLayout
                android:id="@+id/bottomLinearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical"
                android:paddingStart="@dimen/_20sdp"
                android:paddingEnd="@dimen/_20sdp"
                android:paddingBottom="@dimen/_40sdp">

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_40sdp"
                    app:boxStrokeColor="@color/white"
                    app:startIconDrawable="@drawable/ic_password"
                    app:startIconTint="@color/white"
                    app:hintTextColor="@color/white"
                    app:endIconTint="@color/white"
                    android:textColorHint="@color/white"
                    app:endIconMode="password_toggle"
                    app:boxCornerRadiusBottomEnd="@dimen/_5ssp"
                    app:boxCornerRadiusBottomStart="@dimen/_5ssp"
                    app:boxCornerRadiusTopEnd="@dimen/_5ssp"
                    app:boxCornerRadiusTopStart="@dimen/_5ssp"
                    android:hint="Old Password"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/oldPassword"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:inputType="textPassword"
                        />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    app:boxStrokeColor="@color/white"
                    app:startIconDrawable="@drawable/ic_password"
                    app:startIconTint="@color/white"
                    app:hintTextColor="@color/white"
                    app:endIconTint="@color/white"
                    android:textColorHint="@color/white"
                    app:endIconMode="password_toggle"
                    app:boxCornerRadiusBottomEnd="@dimen/_5ssp"
                    app:boxCornerRadiusBottomStart="@dimen/_5ssp"
                    app:boxCornerRadiusTopEnd="@dimen/_5ssp"
                    app:boxCornerRadiusTopStart="@dimen/_5ssp"
                    android:hint="New Password"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/newPassword"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:inputType="textPassword"
                        />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    app:boxStrokeColor="@color/white"
                    app:startIconDrawable="@drawable/ic_password"
                    app:startIconTint="@color/white"
                    app:hintTextColor="@color/white"
                    app:endIconTint="@color/white"
                    android:textColorHint="@color/white"
                    app:endIconMode="password_toggle"
                    app:boxCornerRadiusBottomEnd="@dimen/_5ssp"
                    app:boxCornerRadiusBottomStart="@dimen/_5ssp"
                    app:boxCornerRadiusTopEnd="@dimen/_5ssp"
                    app:boxCornerRadiusTopStart="@dimen/_5ssp"
                    android:hint="Confirm Password"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/confirmPassword"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPassword"
                        android:textColor="@color/white"
                        />

                </com.google.android.material.textfield.TextInputLayout>

                <androidx.cardview.widget.CardView
                    android:id="@+id/updatePasswordCardView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/_30sdp"
                    app:cardBackgroundColor="@color/colorPrimary"
                    app:cardCornerRadius="@dimen/_5sdp">


                    <TextView
                        android:id="@+id/updatePasswordTextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start|center"
                        android:fontFamily="@font/inter_semi_bold"
                        android:gravity="center"
                        android:paddingStart="@dimen/_30sdp"
                        android:paddingTop="@dimen/_9sdp"
                        android:paddingEnd="@dimen/_30sdp"
                        android:paddingBottom="@dimen/_9sdp"
                        android:text="Update Password"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_13ssp"
                        app:fontFamily="@font/inter_semi_bold"
                        tools:ignore="HardcodedText" />


                </androidx.cardview.widget.CardView>

            </LinearLayout>


    </FrameLayout>
